<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.order.OrderFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="201dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/empty_order_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouchh Hungry"
        style="@style/TextView.PopinsNormal20sp020202"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seems like you have not\n ordered any food yet"
        style="@style/TextView.PopinsNormal14sp8D92A3"
        android:textAlignment="center"
        android:layout_marginTop="6dp"/>

    <Button
        style="@style/Button.Primary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Find Foods"
        android:background="@drawable/shape_rectangle_8_ffc700"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        />


</LinearLayout>